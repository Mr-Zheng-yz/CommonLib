<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
<!--            <size-->
<!--                android:width="1dp"-->
<!--                android:height="1dp" />-->
<!--            <solid android:color="#00DBDBDB" />-->
<!--            <corners android:radius="30dp" />-->
            <gradient
                android:startColor="#aaf0f0f0"
                android:endColor="#ffd7d7d7"
                android:angle="270"
                />
        </shape>
    </item>
    <item
        android:top="1px"
        android:bottom="1px"
        android:left="1px"
        android:right="1px">
        <shape  android:shape="oval">
            <solid android:color="#FFFFFFFF" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item android:id="@+id/thumb">
        <shape
            android:innerRadius="0dp"
            android:thicknessRatio="3.1"
            android:shape="ring"
            android:useLevel="false">
            <solid android:color="#308DF9" />
            <corners android:radius="30dp" />
            <size
                android:width="33dp"
                android:height="33dp" />
        </shape>
    </item>
</layer-list>
