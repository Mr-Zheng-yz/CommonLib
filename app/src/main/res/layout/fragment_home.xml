<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <EditText
        android:id="@+id/etPlayUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://10.10.5.35:8033//audio/e7c55a8a-4d88-4a54-ab69-0e22651f99ab.mp3"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/llPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/etPlayUrl">

        <Button
            android:id="@+id/btnSpeaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扬声器播放" />

        <Button
            android:id="@+id/btnHeadset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="耳机播放" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/llPlay">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="媒体音量      0"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black_cancel"
                android:textSize="24sp" />

            <com.baize.common_lib.weiget.TextThumbSeekBar
                android:id="@+id/pbVolumeMedia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:max="100"
                android:maxHeight="16dp"
                android:minHeight="16dp"
                android:progressDrawable="@drawable/seek_style"
                android:thumb="@drawable/seek_bar_thumb"
                android:splitTrack="false" />

            <TextView
                android:id="@+id/tvMaxVolumeMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|right"
                android:text="100"
                android:textColor="@color/text_voice_black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="通话音量      0"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black_cancel"
                android:textSize="24sp" />

            <com.baize.common_lib.weiget.TextThumbSeekBar
                android:id="@+id/pbVolumeCall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:max="100"
                android:maxHeight="16dp"
                android:minHeight="16dp"
                android:progressDrawable="@drawable/seek_style"
                android:thumb="@drawable/seek_bar_thumb"
                android:splitTrack="false" />

            <TextView
                android:id="@+id/tvMaxVolumeCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|right"
                android:text="100"
                android:textColor="@color/text_voice_black"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/llVolume">

        <Button
            android:id="@+id/btnToast1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红色提示"/>

        <Button
            android:id="@+id/btnToast2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绿色提示"/>

        <Button
            android:id="@+id/btnToast3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝色提示"/>

        <Button
            android:id="@+id/btnToast4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常驻提示"/>

        <Button
            android:id="@+id/btnToast5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移除常驻提示"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>